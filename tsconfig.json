{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "ignoreDeprecations": "6.0"   // âœ… ajoute cette ligne
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
